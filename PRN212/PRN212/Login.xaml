<Window x:Class="PRN212.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400">
    <Grid>
        <StackPanel>
                <TextBlock Text="Welcome" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Username" Margin="0,0,0,10" Foreground="DarkSlateGray" Height="20" Width="234"/>
            <TextBox x:Name="txtUsername" Padding="5" BorderBrush="Gray" BorderThickness="1" Width="240"/>
            <TextBlock Text="Password" Margin="0,10,0,5" Foreground="DarkSlateGray" Height="17" Width="237"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" Padding="5" BorderBrush="Gray" BorderThickness="1" Width="240"/>
                <Button Content="Login" Click="btnLogin_Click" FontWeight="Bold" Padding="10" Margin="0,0,0,10" Width="240"/>
                <Button Content="Register" Click="btnRegister_Click" FontWeight="Bold" Padding="10" Width="240"/>
            </StackPanel>
    </Grid>
</Window>
